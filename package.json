{
  "scripts": {
    "setup": "pnpm install && cd www && composer install",
    "dev": "pnpm run kirby & touch src/.lock && vite",
    "kirby": "php -S localhost:8080 -t www/public www/kirby/router.php",
    "build": "rm -f src/.lock && vite build"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.4",
    "postcss": "^8.4.12",
    "tailwindcss": "^3.0.23",
    "vite": "^2.9.1",
    "vite-plugin-live-reload": "^2.1.0"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {
    "alpinejs": "^3.9.5"
  }
}
